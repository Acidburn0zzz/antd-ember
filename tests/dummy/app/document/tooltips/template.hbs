<h1>io-tooltips 文字提示</h1>

<div class="demo-type">
	<h2>文字提示</h2>
	<div class="demo">
		<div class="demo-example">
	        {{#io-tooltips type="top" tip="编辑"}}
	        	测试io-tooltips
	        {{/io-tooltips}}
		</div>
		<div class="demo-code">
			<div class="highlight">
                <pre><code class="language-html">
\{{#io-tooltips tip="编辑"}}
	测试io-tooltips
\{{/io-tooltips}}
                </code></pre>
			</div>
		</div>
	</div>
</div>
<div class="demo-type">
	<h2>文字提示</h2>
